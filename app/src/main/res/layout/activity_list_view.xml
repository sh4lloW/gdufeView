<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListViewActivity">

    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_photo_1"
            style="@style/Card">

            <include
                layout="@layout/card_photo"
                android:transitionName="photo1" />

            <TextView
                android:id="@+id/show_photo_1"
                style="@style/CardTitle"
                android:text="图书馆" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_photo_2"
            style="@style/Card">

            <include
                layout="@layout/card_photo"
                android:transitionName="photo2" />

            <TextView
                android:id="@+id/show_photo_2"
                style="@style/CardTitle"
                android:text="第一教学楼" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_photo_3"
            style="@style/Card">

            <include
                layout="@layout/card_photo"
                android:transitionName="photo3" />

            <TextView
                android:id="@+id/show_photo_3"
                style="@style/CardTitle"
                android:text="实验楼" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_photo_4"
            style="@style/Card">

            <include
                layout="@layout/card_photo"
                android:transitionName="photo4" />

            <TextView
                android:id="@+id/show_photo_4"
                style="@style/CardTitle"
                android:text="综合楼" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>